/* pages/code/code.wxss */
page {
    width: 100%;
    height: 100%;
}
.pageBody {
    width: 100%;
    min-height: 100%;
    background-color: #e8f6fe;
    box-sizing: border-box;
    position: relative;
    padding-top: 140rpx;
    text-align: center;
}
.call-name {
    color: #000;
    font-size: 48rpx;
}
.call-job {
    color: #000;
    font-size: 32rpx;
    margin-top: 35rpx;
}
.call-img {
    margin-top: 45rpx;
    width: 560rpx;
    height: 560rpx;
    border-radius: 100%;
    border: 8px solid #ccecfb;
    display: inline-block;
    overflow: hidden;
}
.call-img image{
    width:100%;
}
.call-company {
    color: #000;
    font-size: 32rpx;
    margin-top: 65rpx;
}