/* pages/products/products.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #f0f8ff;
}

.pageBody {
    width: 100%;
    min-height: 100%;
    background-color: #f0f8ff;
    box-sizing: border-box;
    position: relative;
    padding-bottom: 70px;
}
.swiper {
    background-color: #fff;
}
.proLists {
    background-color: #fff;
}
.list {
    width: 94%;
    height: 300rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid #e7e7e7;
    display: flex;
    align-items: center;
}
.list:last-child {
    border-bottom:1rpx solid #fff;
}
.proImg {
    width: 50%;
    padding-top: 10rpx;
}
.proImg image {
    width: 350rpx;
    border-radius: 25rpx;
    max-height: 149px;
}
.proMesg {
    width: 50%;
    display: flex;
    flex-direction: column;
    padding-left: 18rpx;
    box-sizing: border-box;
    /* align-items: center; */
}
.proMesg .num {
    color: #999;
    font-size: 26rpx;
    margin-top: 21rpx;
}
.proMesg .num image {
    width: 24rpx;
    margin-left: 10rpx;
}
.proMesg .name {
    color: #333;
    font-size: 32rpx;
    font-weight: 700;
}
.proMesg .remark {
    color: #333;
    font-size: 28rpx;
    margin-top: 30rpx;
    height: 40px;
    width: 100%;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.img {
    width: 96%;
    height: 320rpx;
    margin-left: 2%;
    border-radius: 20rpx;
}
.swiper {
    height: 400rpx;
}
.swipers {
    background-color: #ecf7ff;
    padding-bottom: 20rpx
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  position: absolute;
  top: 350rpx;
  z-index: 999;
}
.swiper .wx-swiper-dot {
  width: 12rpx;
  display: inline-flex;
  height: 12rpx;
  margin-left: 12rpx;
  justify-content: space-between;
}
.swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #e5e5e5;
  border-radius: 12rpx;
  -webkit-border-radius: 12rpx;
  -moz-border-radius: 10rxp;
}
.swiper .wx-swiper-dot-active::before {
  background: #006cff;
}
.swiper .wx-swiper-dot.wx-swiper-dot-active {
  width: 30rpx;
}
.tiltes {
    text-align: center;
    color: #666;
    font-size: 14px;
    margin: 10rpx 0;
}
.sideHide .btnMessage {
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    font-size: 45rpx;
    padding: 0;
}
.sideHide .btnMessage::after {
    border:none;
}
.productNull {
    padding-top: 65rpx;
    text-align: center; 
}
.productNull image {
    width: 60%;
}
.proN {
    margin-top: 45rpx;
    color: #333;
    font-size: 34rpx;
}
.titleA {
    color: #333;
    font-size: 32rpx;
    padding: 10px 5%;
}
.titleA>view {
    margin-top: 10rpx;
}