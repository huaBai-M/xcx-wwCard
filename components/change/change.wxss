/* components/change/change.wxss */
.change {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  margin: 0 auto;
  position: fixed;
  animation-name:popup;
  animation-duration:.5s;
  animation-timing-function:ease-out;
  animation-delay:0;
  animation-iteration-count:1;
  animation-direction:normal;
  z-index: 99999;

}
@keyframes popup
{
    from{transform: translateY(-1000rpx);}
    to 	{transform: translateY(0rpx);}
}
/*动画结束*/

.changeClass {
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10px 10px 10px 10px;
  box-sizing: border-box;
  margin:200rpx auto 0;

}

 .img-top {
  position: relative;
  min-height: 300px;
  max-height: 350px;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.content-change .img-top image {
  width: 100%;
}

.content-change .img-top .img-text {
  position: absolute;
  width: 100%;
  height: 50px;
  bottom: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  font-size: 30rpx;
  padding: 3px 5px;
  box-sizing: border-box;
}

.content-change .img-top .img-text text {
  font-size: 24rpx;
}

.changeBtn {
  background-color: #378bfc;
  margin-top: 10px;
  color: #fff;
}

.see-text {
  margin-top: 10px;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

.changeBottomImg {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  border-top: 1px solid #ccc;
}
.inputRoomAbtT1 button {
display: block;
margin-left: auto;
margin-right: auto;
padding-left: 0;
