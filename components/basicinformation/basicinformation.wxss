/* pages/login/login.wxss */
@import "/font/iconfont.wxss";
.top-head {
    background-color: #fff;
    border-radius: 10px;
    display: flex;
    height: 120rpx;
    align-items: center;
    padding: 0 5%;
    box-shadow: 0 0 10rpx #e7e7e7;
}
.headLeft {
    width: 90px;
    text-align: left;
}
.van-cell__title{
  text-align: left;
}
.img-head {
    width: 90rpx;
    height: 90rpx;
    overflow: hidden;
    border-radius: 100%;
    display: inline-block;
}
.img-head image {
    width: 100%;
    min-height: 90rpx;
}
.btn-change {
    /* width: ; */
    text-align: right;
    color: #999;
    font-size: 15px;
}
.input-content {
    margin-top: 20rpx;
    border-radius: 10px;
    box-shadow: 0 0 10rpx #e7e7e7;
    background-color: #fff;
}
.input-content .van-cell__title {
    text-align: left;
}
.input-content .van-cell {
    padding: 13px 20px;
    font-size: 15px;
    width: 98%;
}
.btns {
    margin-top: 40rpx;
}
.btns .van-button--normal {
    padding: 0;
    width: 40%;
    margin: 0 5%;
    border-radius: 5px;
    font-size: 17px;
}
.btns .van-button--default {
    background-color: #bfbfbf;
    color: #fff;
}
.label {
    width: 90px;
    text-align: left;
}
.picker {
    padding:13px 0px;
    font-size:15px;
    width:94%;
    line-height:24px;
    color:#333;
    background-color:#fff;
    box-sizing:border-box;
    position:relative;
    display:-webkit-flex;
    display:flex;
    border-bottom: 1rpx solid #f7f6f6;
    margin-left: 4%;
}
.region {
    color: #333;
    font-size: 15px;
    width: 200px;
    text-align: left;
}
.van-icon-arrow {
    color: #999;
    font-size: 18px;
    vertical-align: middle;
}
.rela-add {
    color: #333;
    position: relative;
}
.rela-add .change {
    position: absolute;
    right: 50rpx;
    top: 15rpx;
    z-index: 999;
    height: 30px;
    line-height: 28px;
    padding: 0 8px;
    background-color: #fff;
    border: 1px solid #00a0e9;
    color: #00a0e9;
    border-radius: 5px;
    font-size: 12px;
}
.imgTop {
    margin-bottom: 10px;
}
.imgTop image {
    width: 100%;
}
.khName {
    position: relative;
    overflow: unset;
}
.history {
    position: absolute;
    top: 50px;
    left: 90px;
    z-index: 9999;
    border: 1px solid #ccc;
}
.history .list {
    width: 500rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #fff;
    border-bottom: 1px solid #ccc;
    color: #999;
    font-size: 30rpx;
}
/* .history .list:first-child {
    background-color: #eeeeee;
} */
.history .lists {
    max-height: 412rpx;
    overflow: auto;
}
.listClose {
    width: 500rpx;
    height: 80rpx;
    text-align: right;
    line-height: 80rpx;
    background-color: #fff;
    border-bottom: none;
    color: #999;
    font-size: 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
}
.displayPhone {
    display: flex;
    align-items: center;
    position: relative;
}
.displayPhone .change{
  position:absolute;
  right:50rpx;
  font-size:24rpx;
  background-color: #fff;
  border: 1px solid #00a0e9;
  color: #00a0e9;
  padding:8rpx 15rpx;
  border-radius:5rpx;
  z-index: 9;
}